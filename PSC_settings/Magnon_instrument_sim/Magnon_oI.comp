      }
     }

      range = brack_high - brack_mid;

     for (i=0; i<=(steps_high-1); i++)
     {
       root = zridd_gpu(brack_mid+range*i/(int)steps_high,
                   brack_mid+range*(i+1)/(int)steps_high,
                   (double *)parms, ROOTACC);
      if (root != UNUSED)
      {
        list[(*index)++]=root;
      }
